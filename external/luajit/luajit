while getopts :p: flag; do
	case $flag in
		p)
			LUAJIT_PATH=$OPTARG
			;;
		?)
			OPTIONS="$OPTIONS -$OPTARG"
			;;
	esac
done

shift $((OPTIND - 1))

export LUA_PATH="$LUAJIT_PATH/?.lua"

$LUAJIT_PATH/luajit $OPTIONS $@
