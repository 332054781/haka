
while getopts :p:o: flag; do
	case $flag in
		p)
			LUAJIT_PATH=$OPTARG
			;;
		o)
			OUTPUT=$OPTARG
			;;
		?)
			OPTIONS="$OPTIONS -$OPTARG"
			;;
	esac
done

shift $((OPTIND - 1))

export LD_LIBRARY_PATH="$LUAJIT_PATH/lib"
export LUA_PATH="$LUAJIT_PATH/share/luajit-2.0.1/?.lua"

$LUAJIT_PATH/bin/luajit -b $OPTIONS $1 $OUTPUT
