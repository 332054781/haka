#!/bin/sh
# Start/stop the haka daemon.
#

PATH=/bin:/usr/bin:/sbin:/usr/sbin:@HAKA_INSTALL_PREFIX@/bin
DESC="haka daemon"
NAME=haka
DAEMON=@HAKA_INSTALL_PREFIX@/bin/haka
PIDFILE=/var/run/haka.pid
SCRIPTNAME=/etc/init.d/"$NAME"
DESCRIPTION="haka network tool"

test -f $DAEMON || exit 0

. /lib/lsb/init-functions

[ -r /etc/default/$NAME ] && . /etc/default/$NAME

case "$1" in
start)  log_daemon_msg "Starting $DESCRIPTION" "$NAME"
        start_daemon -p $PIDFILE $DAEMON -- $EXTRA_OPTS &> /dev/null
        log_end_msg $?
        ;;
stop)   log_daemon_msg "Stopping $DESCRIPTION" "$NAME"
        killproc -p $PIDFILE $DAEMON
        RETVAL=$?
        [ $RETVAL -eq 0 ] && [ -e "$PIDFILE" ] && rm -f $PIDFILE
        log_end_msg $RETVAL
        ;;
restart) log_daemon_msg "Restarting $DESCRIPTION" "$NAME" 
        $0 stop
        $0 start
        ;;
status)
        status_of_proc -p $PIDFILE $DAEMON $NAME && exit 0 || exit $?
        ;;
*)      log_action_msg "Usage: $SCRIPTNAME {start|stop|status|restart}"
        exit 2
        ;;
esac
exit 0
