which systemctl >/dev/null 2>1 && systemctl daemon-reload

if [ -f @HAKA_PID_FILE@ ]; then
	if [ "$(cat @HAKA_PID_FILE@)" = "restart" ]; then
		rm -f @HAKA_PID_FILE@
		@CMAKE_INSTALL_PREFIX@/etc/init.d/haka start
	fi
fi
